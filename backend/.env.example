# Backend
PORT=5050
NODE_ENV=production

# Auth (JWT)
JWT_SECRET=your_jwt_secret_min_32_chars
JWT_ISSUER=ivs-live-streaming

# Database (PostgreSQL)
# For Docker: use DB_HOST=postgres (container name)
# For local: use DB_HOST=localhost
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=ivs_live

# AWS
AWS_REGION=eu-west-1

# AWS Credentials (DO NOT COMMIT REAL VALUES)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# IVS Playback Authorization (for private channels)
IVS_PLAYBACK_KEY_PAIR_ID=your_key_pair_id
IVS_PLAYBACK_PRIVATE_KEY="-----BEGIN EC PRIVATE KEY-----
your_private_key_here
-----END EC PRIVATE KEY-----"

# Seed Data (optional - for initial setup)
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=Admin@12345
SEED_VIEWER_EMAIL=viewer@example.com
SEED_VIEWER_PASSWORD=Viewer@12345
SEED_EVENT_IVS_CHANNEL_ARN=arn:aws:ivs:eu-west-1:your-account:channel/your-channel-id

# Company GST Details (for invoices)
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=Your Company Address, City, State, PIN
PHONE_NUMBER=Ph No.: +91 40 2381 8393, +91 98480 40980
COMPANY_GSTIN=22AAAAA0000A1Z5
SAC_CODE=999629

#Razorpay-test
RAZORPAY_KEY_ID_TEST=key-id-test
RAZORPAY_KEY_SECRET_TEST=key-secret-test
#Razorpay-prod
RAZORPAY_KEY_ID=key-id
RAZORPAY_KEY_SECRET=key-secret
# Razorpay Webhook Secret (get from Razorpay Dashboard -> Settings -> Webhooks)
RAZORPAY_WEBHOOK_SECRET=webhook-secret
# Viewing Session Limits
MAX_VIEWING_DEVICES=3
SESSION_HEARTBEAT_TIMEOUT_SECONDS=60
# Resend.com Email Service
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@dxsoltech.com
# Frontend URL for password reset links
FRONTEND_URL=https://events.sampradaya.live
#Season ticket discount percentage (e.g., 10 for 10% discount)
SEASON_TICKET_DISCOUNT_PERCENT=20
# Temporary: set your IVS playback URL (HLS master playlist)
# Example format:
# https://<playback-domain>/api/video/v1/<region>.<channel-id>.m3u8
IVS_PLAYBACK_URL_DEFAULT=https://12f1b4ea7d85.eu-west-1.playback.live-video.net/api/video/v1/eu-west-1.466861814567.channel.zQvqXesidq54.m3u8

CLOUDFRONT_RECORDINGS_DOMAIN=yourdomain.cloudfront.net
CLOUDFRONT_KEY_PAIR_ID=cloudfront-key-paid-id
CLOUDFRONT_PRIVATE_KEY="cloudfront-private-key"
S3_RECORDINGS_BUCKET=your-bucket-name
S3_RECORDINGS_PREFIX=your-prefix

# Chromecast Settings
# Enable casting for live paid events (uses server proxy - consumes bandwidth)
CHROMECAST_ENABLE_LIVE=false
# Enable casting for recorded events (uses CloudFront directly - no extra bandwidth)
CHROMECAST_ENABLE_RECORDING=true